<div class="col-lg-12">
        <div class="card mb-30" style="height: 85vh">
            <div class="card-body">
                <div class="card-header">
                    <h5 class="card-title">Vertical Pi Tab</h5>
                </div>

                <div class="row vertical-pills-tab">
                    <div class="col-sm-6">
                      <div class="overflow">
                        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                            <% counter = 0 %>
                            <% @portfolio.last(10).sort_by! { |hsh| hsh[:name] }.each do |player| %>
                            <% counter += 1 %>
                            <a class="nav-link" data-toggle="pill" href=<%= "#div-tab-#{counter}" %> >
                              <img style="height: 35px; width: 35px;" src=<%= "https://img.footballindex.co.uk/#{player[:optimized_image]}"%>>
                            <%= player[:name] %>, <%= number_to_percentage(((player[:buyingprice] - player[:price]) / player[:price]) * 100, precision: 1) %>, <%= number_to_currency(((player[:buyingprice] - player[:price]) * player[:quantity]), unit: "Â£")  %>
                            </a>
                            <% end %>
                        </div>
                      </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="tab-content" id="v-pills-tabContent">
                          <% counter = 0 %>
                          <% @portfolio.last(10).sort_by! { |hsh| hsh[:name] }.each do |player| %>
                          <% counter += 1 %>
                            <div class="tab-pane fade" id="<%= "div-tab-#{counter}" %>" role="tabpanel">
                              <img style="height: 80px; width: 80px;" src=<%= "https://img.footballindex.co.uk/#{player[:optimized_image]}"%>>
                              <h2><%= player[:name] %></h2>
                              <div id=<%= "#apex-basic-line-chart-#{player[:name]}" %>></div>
                            </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

